{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "lib": ["ES2021", "ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "target": "ESNext"
  },
  "include": ["lib"],
  "exclude": ["node_modules", "test"]
}
